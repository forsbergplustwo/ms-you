<%= polaris_page(
  narrow_width: true,
  title: it('Settings')
) do |page| %>

  <%= polaris_card do %>
    <%= render "form", user: current_user %>
  <% end %>

  <%= polaris_page_actions do |actions| %>
    <% actions.secondary_action(
      destructive: true,
      outline: true,
      data: {
        controller: "polaris",
        target: "#destroy-user-modal",
        action: "polaris#openModal",
      }
    ) { it("Delete your account") } %>
  <% end %>
<% end %>

<%= render "modals/destroy", id: "destroy-user-modal", url: user_path(current_user) %>
