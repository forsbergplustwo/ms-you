<%= polaris_page(
  narrow_width: true,
  title: it("Password reset"),
  subtitle: it("Enter your new password. You will be logged in automatically."),
) do |page| %>

  <%= polaris_card do %>

    <%= turbo_frame_tag :password, target: "_top" do %>
      <%= form_with(url: [@user, :password, token: @user.confirmation_token],
        html: { method: :put }, builder: Polaris::FormBuilder) do |form| %>
        <%= polaris_form_layout do |form_layout| %>

          <% form_layout.item do %>
            <%= form.polaris_text_field :email, label: it("Email"), type: :email, required: true %>
          <% end %>

          <% form_layout.item do %>
            <%= polaris_button(
              submit: true,
              primary: true,
              data: {form_target: "submitButton"},
            ) { it('Submit') } %>
          <% end %>

        <% end %>
      <% end %>
    <% end %>

  <% end %>

<% end %>
