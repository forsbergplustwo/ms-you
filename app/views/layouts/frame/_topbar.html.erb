<% frame.top_bar do |top_bar| %>
  <% top_bar.user_menu(name: current_user.name, detail: current_user.preferred_language) do |user_menu| %>
    <% user_menu.avatar(
      initials: current_user.name[0..1],
      name: current_user.name,
      # source: current_user.gravatar_image_url,
    ) %>

    <%= polaris_action_list do |action_list| %>
      <% action_list.item(
        icon: "LogOutMinor",
        url: "", #sign_out_path(shop: current_shop.shopify_domain),
        data: {turbo: false}
      ) { it('Log out') } %>
    <% end %>
  <% end %>
<% end %>
