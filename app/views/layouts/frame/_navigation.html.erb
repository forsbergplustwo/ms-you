<% !signed_in? || unless content_for?(:hide_navigation) %>
  <% frame.navigation do |navigation| %>
    <% navigation.section(
        title: "MS+you",
        fill: true
    ) do |section| %>
      <% section.item(
        url: root_path,
        label: it("Symptoms"),
        icon: "HomeMajor",
        selected: nav_item_selected?(root_path),
        link_arguments: {}
      ) %>
      <% section.item(
        url: notes_path,
        label: it("Notes"),
        icon: "BlogMajor",
        selected: nav_item_selected?(notes_path),
        link_arguments: {}
      ) %>
      <% section.item(
        url: edit_user_path(current_user),
        label: it("Settings"),
        icon: "SettingsMajor",
        selected: nav_item_selected?(edit_user_path(current_user)),
        link_arguments: {}
      ) %>
    <% end %>
    <% navigation.section do |section| %>
      <% section.item(
        url: sign_out_path,
        label: it("Log out"),
        icon: "MobileBackArrowMajor",
        link_arguments: {
          data: {
            turbo_method: :delete
          }
        }
      )%>
    <% end %>
  <% end %>
<% end %>
