<%= polaris_modal(id: id, title: it("Delete")) do |modal| %>

  <%= polaris_text_container do %>
    <p><%= it("Are you sure you want to delete it? This cannot be undone.") %></p>
  <% end %>

  <% modal.primary_action(
    destructive: true,
    url: url,
    data: {turbo_method: :delete}
  ) { it("Delete") }%>

  <% modal.secondary_action(data: {action: "polaris-modal#close"}) { it("Cancel") } %>

<% end %>
