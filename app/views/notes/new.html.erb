<%= turbo_frame_tag :remote_modal do %>

  <%= polaris_modal(id: "new-note-modal", title: it("Add note"), open: true) do |modal| %>

    <%= turbo_frame_tag @note, target: "_top" do %>
      <%= render "form", note: @note %>
    <% end %>

    <% modal.primary_action(
      submit: true,
      form: "note-form",
    ) do %>
      <%= it("Save") %>
    <% end %>
    <% modal.secondary_action(data: {action: "polaris-modal#close"}) do %>
      <%= it("Cancel") %>
    <% end %>
  <% end %>

<% end %>
