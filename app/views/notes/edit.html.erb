
<%= polaris_page(
  narrow_width: true,
  title: it('Edit note'),
  back_url: params[:back_to].presence || notes_path,
) do |page| %>

  <%= polaris_card do %>
    <%= render "form", note: @note %>
  <% end %>

  <%= polaris_page_actions do |actions| %>
    <% actions.secondary_action(
      destructive: true,
      outline: true,
      data: {
        controller: "polaris",
        target: "#destroy-note-modal",
        action: "polaris#openModal",
      }
    ) { it("Delete note") } %>
  <% end %>

<% end %>

<%= render "modals/destroy", id: "destroy-note-modal", url: note_path(@note) %>
