<%= turbo_frame_tag :session, target: "_top" do %>
  <%= form_for(:session, url: session_path, builder: Polaris::FormBuilder, data: {turbo: false}, format: :html) do |form| %>
    <%= polaris_form_layout do |form_layout| %>

      <% form_layout.item do %>
        <%= form.polaris_text_field :email, label: it("Email"), type: :email, required: true %>
      <% end %>

      <% form_layout.item do %>
        <%= form.polaris_text_field :password, label: it("Password"), type: :password, required: true %>
      <% end %>

      <% form_layout.item do %>
        <%= polaris_button(
          submit: true,
          primary: true,
          data: {form_target: "submitButton"},
        ) { it('Log in') } %>
      <% end %>

    <% end %>
  <% end %>
<% end %>
