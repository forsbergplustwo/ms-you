<%= polaris_modal(id: "destroy-modal", title: it("Delete")) do |modal| %>
  <%= polaris_text_container do %>
    <p><%= it("Are you sure you want to delete it? This cannot be undone.") %></p>
  <% end %>

  <% modal.primary_action(
    destructive: true,
    url: url,
    data: {turbo_method: :delete},
  ) do %>
    <%= it("Delete") %>
  <% end %>
  <% modal.secondary_action(data: {action: "polaris-modal#close"}) do %>
    <%= it("Cancel") %>
  <% end %>
<% end %>
