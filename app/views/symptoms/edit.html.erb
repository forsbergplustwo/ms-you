<%= polaris_page(
  narrow_width: true,
  title: it('Edit'),
  back_url: symptom_path(@symptom),
) do |page| %>

  <% page.action_group(
    title: it('More actions'),
    actions: [
      { content: it('Delete'),
        destructive: true,
        data: {
          controller: "polaris",
          target: "#destroy-symptom-modal",
          action: "polaris#openModal",
        }
      },
    ]
  ) %>

  <%= polaris_card do %>
    <%= render "form", symptom: @symptom %>
  <% end %>

<% end %>

<%= render "modals/destroy", id: "destroy-symptom-modal", url: symptom_path(@symptom) %>
