<%= polaris_page(
  narrow_width: true,
  title: t("actions.edit"),
  back_url: symptom_path(@symptom),
) do |page| %>

  <% page.action_group(
    title: "More actions",
    actions: [
      { content: t("actions.delete"),
        destructive: true,
        data: {
          controller: "polaris",
          target: "#destroy-modal",
          action: "polaris#openModal",
        }
      },
    ]
  ) %>

  <%= polaris_card do %>
    <%= render "form", symptom: @symptom %>
  <% end %>


<% end %>

<%= render "symptoms/modals/destroy", url: symptom_path(@symptom) %>
